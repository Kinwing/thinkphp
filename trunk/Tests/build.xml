<?xml version="1.0" encoding="utf-8"?>
<project name="ThinkPHP" default="test">
  <target name="test">
    <exec dir="${basedir}" executable="php" failonerror="true">
      <arg line="-d safe_mode=Off -d memory_limit=64M '../ThinkPHP/Tools/phpunit.php' --log-tap Docs/log.txt --log-xml Docs/log.xml --testdox-html Docs/test.html --testdox-text Docs/test.txt AllTests.php"/>
    </exec>
  </target>

  <target name="report">
    <exec dir="${basedir}" executable="php" failonerror="true">
      <arg line="-d safe_mode=Off -d memory_limit=64M '../ThinkPHP/Tools/phpunit.php' --configuration config.xml AllTests.php"/>
    </exec>
  </target>

  <target name="clean">
    <exec dir="${basedir}" executable="php">
      <arg line="Clean.php"/>
    </exec>
  </target>
</project>
